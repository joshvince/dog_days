<%= turbo_frame_tag @day, "doses" do %>
  <div
    data-controller="toggle-form"
    class="m-4 p-8 flex flex-col justify-center items-center bg-white border border-gray-00 shadow-lg rounded-md "
  >
    <h2 class="mb-8 font-black text-3xl">ğŸ’Š Medicine</h2>
    <div data-toggle-form-show-form-value="false" class="flex flex-col items-center">
      <%= render 'add_dose' %>
      <div
        data-toggle-form-target="toggleText"
        data-action="click->toggle-form#toggle"
        class="underline text-sm text-gray-500 mt-4 mb-4"
      >
        Create a new dose
      </div>
      <div data-toggle-form-target="toggleList" class="flex flex-col items-center h-32">
        <div class="uppercase text-xs text-gray-400 mb-4"><%= pluralize(@doses.count, 'dose') %></div>
        <%= render 'dose_list' %>
      </div>
    </div>
    <div data-toggle-form-target="toggleForm" class="h-32">
      <%= render 'create_new_medicine' %>
    </div>
  </div>
<% end %>
