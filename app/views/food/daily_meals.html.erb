<%= turbo_frame_tag @day, "meals" do %>
  <div class="m-4 p-8 flex flex-col justify-center items-center bg-white border border-gray-00 shadow-lg rounded-md ">
    <h2 class="mb-8 font-black text-3xl">üçó Food</h2>
    <div>
      <%= render 'add_meal' %>
    </div>
    <div class="uppercase text-xs text-gray-400 mt-4 mb-2">
      <%= pluralize(@meals.count, 'meal') %>
    </div>
    <div class="flex flex-col items-start max-h-20 overflow-y-scroll overflow-visible border border-solid rounded-lg">
      <% @meals.each do |meal| %>
        <div class="flex items-start w-60 bg-emerald-50 border-b border-solid p-2">
          <div class="mr-2 text-xl">
            <%=meal.food.emoji %>
          </div>
          <div>
            <%=meal.food.name %>
          </div>
        </div>
      <% end %>
    </div>
    <%= render 'create_new_meal' %>
  </div>
<% end %>
