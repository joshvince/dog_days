<%= form_with(url: create_new_meal_path(@day), method: :post, class: "mt-4") do |form| %>
  <%= form.text_field(:emoji, {class: "rounded-lg p-2 w-12 border border-gray-300"}) %>
  <%= form.text_field(:name, {class: "rounded-lg p-2 w-40 border border-gray-300"}) %>
  <%= form.submit('Save and add', {class: "rounded-lg p-4 w-48 border"}) %>
<% end %>
