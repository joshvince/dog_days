<%= form_with(
  url: update_daily_meal_path(@day),
  method: :post,
  class: "flex flex-col justify-center align-middle",
  data: {
    "controller": "inline-submit-form",
    "turbo-frame": "day_#{@day.id}_meals",
    "inline-submit-form-target": "form",
    "action": "change->inline-submit-form#submit"
  }
) do |form| %>
  <%= form.select(
    :meal,
    meal_options,
    { prompt: "Add a meal" },
    {
      class: "w-48 rounded-lg p-4 pr-8 border border-gray-300",
      "data-toggle-form-target": "disabledOption"
    }
  )
  %>
<% end %>
